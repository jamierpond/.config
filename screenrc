bindkey -k F3 select 2
bindkey -k F4 select 3
bindkey -k F5 select 4
bindkey -k F6 select 5
bindkey -k F7 select 6
bindkey -k F8 select 7
bindkey -k F9 select 8
bindkey -k F10 select 9   # fn+9

