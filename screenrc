# Use Ctrl+G as the escape sequence
escape ^Gg

startup_message off
nethack off

# Define 10 empty named windows
screen -t tmux0 0
screen -t tmux1 1
screen -t tmux2 2
screen -t tmux3 3
screen -t tmux4 4
screen -t tmux5 5
screen -t tmux6 6
screen -t tmux7 7
screen -t tmux8 8
screen -t tmux9 9

