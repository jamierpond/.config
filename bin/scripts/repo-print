#!/bin/bash
set -euo pipefail

# Usage: ./script.sh py ts js

# Find git root
git_root=$(git rev-parse --show-toplevel)
cd "$git_root"

# Print tree of repo
echo "### Repo tree:"
git ls-files | tree --fromfile
echo

# Check for args
if [ $# -eq 0 ]; then
    echo "No file searches provided."
    exit 1
fi

# Build regex from args
pattern=$(printf "|%s" "$@")
pattern=${pattern:1}  # remove leading pipe

# Find matching files
matches=$(git ls-files | grep -E "$pattern" || true)

if [ -z "$matches" ]; then
    echo "No files found with the specified search string: $*"
    exit 0
fi

# Print matching files
while IFS= read -r file; do
    echo -e "\n"
    echo -e "\n#########################"
    echo -e "### $file"
    cat "$file"
done <<< "$matches"

